<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@drawable/gambar"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/etemaillogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/tombol_2"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:fontFamily="@font/tebal" />

    <EditText
        android:id="@+id/etpassword"
        android:layout_marginTop="270dp"
        android:layout_marginStart="-390dp"
        android:layout_marginEnd="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tombol_2"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:fontFamily="@font/tebal" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_marginTop="50dp"
        android:layout_marginStart="-260dp"
        android:layout_width="124dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:background="@drawable/tombol_1"
        android:fontFamily="@font/tebal"
        android:text="masuk"
        android:textColor="@color/blue"
        app:backgroundTint="@color/white"/>

    <TextView

        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-180dp"
        android:layout_marginTop="500dp"
        android:text="Forgot Password ? Click"
        android:fontFamily="@font/biasa"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvtorecovery"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="500dp"
        android:text="Here"
        android:fontFamily="@font/tebal"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-371dp"
        android:layout_marginTop="535dp"
        android:text="Haven't Account ? Click"
        android:fontFamily="@font/biasa"
        android:textColor="@color/white"
        android:textAlignment="center"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tvtoregister"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-6dp"
        android:layout_marginTop="535dp"
        android:text="Here"
        android:fontFamily="@font/tebal"
        android:textColor="@color/white"
        android:textSize="16sp" />

</LinearLayout>